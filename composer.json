{
    "name": "rnr1721/le7-view-twig",
    "description": "Twig view adapter for le7 PHP MVC framework or any PHP PSR project",
    "keywords": ["le7", "le7-framework", "framework", "view", "component", "twig"],
    "authors": [
        {
            "name": "Eugeny G",
            "email": "rnr1721@gmail.com",
            "homepage": "https://xhamster.biz.ua",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Core\\Interfaces\\": "src/Interfaces",
            "Core\\View\\Twig\\": "src/Twig"
        }
    },
    "require": {
        "php": ">=8.1",
        "psr/http-message": "^2.0",
        "psr/simple-cache": "^3.0",
        "rnr1721/le7-view": "^1.0.0",
        "twig/twig": "^3.5"
    },
    "require-dev": {
        "vimeo/psalm": "^5.7",
        "phpunit/phpunit": "^10.0",
        "nyholm/psr7": "^1.5",
        "rnr1721/psr7-server": "^1.0",
        "rnr1721/le7-cache": "^1.0",
        "rnr1721/le7-logger": "^1.0",
        "rnr1721/le7-testing": "^1.0",
        "rnr1721/le7-event-manager": "^1.0",
        "php-di/php-di": "^7.0"
    },
    "replace": {
        "rnr1721/le7-view-smarty": "*"
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@psalm"
        ],
        "phpunit": "phpunit",
        "psalm": "psalm"
    }
}
